{
	"name": "vscode-stitch",
	"displayName": "Stitch integration helper",
	"description": "Helper to create Stitch Integrations",
	"publisher": "ShipitSmarter",
	"author": {
		"name": "ShipitSmarter",
		"url": "https://github.com/ShipitSmarter"
	},
	"contributors": [
		{
			"name": "Jeffrey Tummers",
			"url": "https://github.com/ThumNet"
		},
		{
			"name": "Lennart van Koot",
			"url": "https://github.com/LennartKoot"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ShipitSmarter/vscode-stitch"
	},
	"version": "1.2.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Debuggers",
		"Visualization"
	],
	"icon": "assets/icon.png",
	"activationEvents": [
		"onCommand:stitch.preview",
		"onCommand:stitch.showTree",
		"onCommand:stitch.createHash",
		"onCommand:stitch.createSecret",
		"onView:stitch.modelTree"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "stitch.preview",
				"title": "Preview",
				"category": "Stitch",
				"icon": {
					"dark": "assets/icon.svg",
					"light": "assets/icon.svg"
				}
			},
			{
				"command": "stitch.showTree",
				"title": "Show Model Tree",
				"category": "Stitch"
			},
			{
				"command": "stitch.createHash",
				"title": "Create Hash (use for API keys)",
				"category": "Stitch"
			},
			{
				"command": "stitch.createSecret",
				"title": "Create Secret (use for passwords)",
				"category": "Stitch"
			},
			{
				"command": "stitch.selectScenario",
				"title": "Select Scenario",
				"category": "Stitch"
			},
			{
				"command": "stitch.showScenarioSource",
				"title": "Show source",
				"icon": {
					"dark": "assets/open-file-dark.svg",
					"light": "assets/open-file-light.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "stitch.selectScenario",
					"when": "stitch:contextAvailable"
				},
				{
					"command": "stitch.showScenarioSource",
					"when": "false"
				},
				{
					"command": "stitch.showTree",
					"when": "stitch:contextAvailable || resourceFilename =~ /.integration.json$/"
				}
			],
			"editor/title": [
				{
					"command": "stitch.preview",
					"when": "!stitch:previewActive && resourceFilename =~ /.integration.json$/",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "stitch.showScenarioSource",
					"group": "inline@1",
					"when": "view == stitch.modelTree && viewItem == SCENARIO_FILE"
				}
			]
		},
		"configuration": {
			"title": "Stitch",
			"properties": {
				"stitch.endpointUrl": {
					"type": "string",
					"default": "",
					"description": "Url where the Stitch editor endpoint is available",
					"pattern": "(http:|https:)+[^\\s]+[\\w]"
				},
				"stitch.debounceTimeout": {
					"type": "number",
					"default": 500,
					"description": "Amount of ms to wait with no changes before reloading preview",
					"minimum": 200
				},
				"stitch.rootFolderName": {
					"type": "string",
					"default": "files",
					"description": "The name of the root folder where the *.integration.json files are stored",
					"pattern": "^[a-zA-Z0-9-]+$"
				}
			}
		},
		"jsonValidation": [
			{
				"fileMatch": "*.integration.json",
				"url": "https://raw.githubusercontent.com/ShipitSmarter/stitch-schemas/master/integration.schema.json"
			},
			{
				"fileMatch": "*.integration.metadata.json",
				"url": "https://raw.githubusercontent.com/ShipitSmarter/stitch-schemas/master/integration.metadata.schema.json"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "stitch-tree",
					"title": "Stitch Model Tree",
					"icon": "assets/icon.png"
				}
			]
		},
		"views": {
			"stitch-tree": [
				{
					"id": "stitch.modelTree",
					"name": "Stitch Model Tree",
					"contextualTitle": "Stitch Model Tree",
					"icon": "assets/icon.png",
					"when": "stitch:contextAvailable || resourceFilename =~ /.integration.json$/"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "stitch.modelTree",
				"contents": "No *.integration.json file found\n\nPlease open an *.integration.json file to enable the model tree!"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"unittest": "npm run compile && mocha -u tdd ./out/test/suite/unitTests/**.test.js",
		"deploy": "vsce publish"
	},
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/chai-subset": "^1.3.3",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/mock-fs": "^4.13.1",
		"@types/node": "^16.11.11",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.28.0",
		"@typescript-eslint/parser": "^5.28.0",
		"@vscode/test-electron": "^2.1.4",
		"chai": "^4.3.6",
		"chai-subset": "^1.6.0",
		"eslint": "^8.17.0",
		"mocha": "^10.0.0",
		"mock-fs": "^5.1.2",
		"ts-node": "^10.8.1",
		"typescript": "^4.7.3",
		"vsce": "^2.9.1"
	},
	"dependencies": {
		"axios": "^0.27.2",
		"glob": "^7.2.3"
	}
}